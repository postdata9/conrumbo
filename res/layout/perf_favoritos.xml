<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pest_favoritos"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".perfil.FavoritosPerfilFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/rutas_favoritas"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="30dp"
            android:text="@string/rutas_favoritas"
            android:textColor="@color/primary_color_dark"
            android:textStyle="bold"
            android:textAppearance="?attr/textAppearanceHeadline3"/>
        <View
            android:layout_width="1dp"
            android:layout_height="150dp"
            android:background="@color/secondary_color"/>

        <TextView
            android:id="@+id/lugares_visitados"
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="30dp"
            android:text="@string/lugares_visitados"
            android:textAppearance="?attr/textAppearanceHeadline3"
            android:textColor="@color/primary_color_dark"
            android:textStyle="bold" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/secondary_color"/>

</LinearLayout>