<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/informacion_pdi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/info_ruta_publica"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:textSize="20dp"
            android:text="@string/informacion_punto"
            android:textStyle="bold"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center">

            <ImageView
                android:id="@+id/eliminar_punto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/modificar_punto"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_eliminar" />

            <ImageView
                android:id="@+id/modificar_punto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginRight="20dp"
                android:src="@drawable/ic_modificar_ruta" />
        </LinearLayout>

        <TextView
            android:id="@+id/nombre_punto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="3dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="@color/primary_color"/>

        <!-- Información del lugar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginBottom="10dp">

            <!-- Horario -->
            <LinearLayout
                android:id="@+id/ll_horario_punto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:text="@string/horario_punto2"/>

                <TextView
                    android:id="@+id/horario_punto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:scrollbars="vertical"/>
            </LinearLayout>

            <!-- Precio -->
            <LinearLayout
                android:id="@+id/ll_precio_punto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:text="@string/precio_punto2"/>

                <TextView
                    android:id="@+id/precio_punto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:scrollbars="vertical"/>
            </LinearLayout>

            <!-- Enlace -->
            <LinearLayout
                android:id="@+id/ll_enlace_punto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:text="@string/enlace_punto_2"/>

                <TextView
                    android:id="@+id/enlace_punto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:scrollbars="vertical"
                    android:textIsSelectable="true"/>
            </LinearLayout>

            <!-- Audioguía -->
            <LinearLayout
                android:id="@+id/ll_audioguia_punto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:text="@string/audioguia_punto2"/>

                <TextView
                    android:id="@+id/audioguia_punto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:scrollbars="vertical"/>
            </LinearLayout>
        </LinearLayout>

        <!-- Separador -->
        <View
            android:id="@+id/separador2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/secondary_color"/>

        <!-- Historia y Datos curiosos -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:scrollbars="horizontal">

            <!-- Historia -->
            <LinearLayout
                android:id="@+id/ll_historia_punto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:scrollbars="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:text="@string/historia"/>

                <TextView
                    android:id="@+id/historia_punto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:scrollbars="vertical" />
            </LinearLayout>

            <!-- Datos curiosos -->
            <LinearLayout
                android:id="@+id/ll_datoscuriosos_punto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:textStyle="bold"
                    android:text="@string/datos_curiosos"/>

                <TextView
                    android:id="@+id/datoscuriosos_punto"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="3dp"
                    android:textColor="@color/primary_color"
                    android:scrollbars="vertical"/>
            </LinearLayout>
        </LinearLayout>


        <!-- Separador -->
        <View
            android:id="@+id/separador1"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/secondary_color"/>

        <!-- Opinión -->
        <LinearLayout
            android:id="@+id/ll_opinion_punto"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="3dp"
                android:textColor="@color/primary_color"
                android:textStyle="bold"
                android:text="@string/opinion_punto"/>

            <TextView
                android:id="@+id/opinion_punto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="4"
                android:padding="3dp"
                android:textColor="@color/primary_color"
                android:scrollbars="vertical"/>
        </LinearLayout>

        <TextView
            android:id="@+id/aviso_punto_vacio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="20dp"
            android:layout_marginBottom="20dp"
            android:textStyle="italic"
            android:textColor="@color/primary_color_dark"
            android:text="@string/punto_vacio"/>
    </LinearLayout>
</ScrollView>