<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:fitsSystemWindows="true"
    android:padding="5dp"
    android:background="@color/primary_color">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/imagen_cabecera"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        android:src="@mipmap/sin_foto"
        android:scaleType="centerCrop"
        app:riv_corner_radius="50dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="5dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/configuracion_cuenta"
            android:layout_margin="2dp"
            android:textAppearance="?attr/textAppearanceHeadline6"
            android:textStyle="bold"
            android:textColor="@color/primary_color_dark"
            android:gravity="center"/>

        <TextView
            android:id="@+id/correo_cabecera"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/correo_electronico"
            android:layout_margin="2dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            android:textAppearance="?attr/textAppearanceBody2"
            android:gravity="center"
            android:textColor="@color/primary_color_dark"/>
    </LinearLayout>

</LinearLayout>